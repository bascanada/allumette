{
	"name": "@bascanada/allumette-web",
	"version": "0.0.8",
	"license": "GPL-3.0-only",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && svelte-kit sync && svelte-package",
		"build:webcomponents": "vite build --config vite.config.webcomponents.js && cp test.html dist/",
		"build:all": "npm run build && npm run build:webcomponents && publint",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "npm run build:all"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/test.html"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles": "./dist/styles.css",
		"./web-components": {
			"import": "./dist/web-components/allumette-web.es.js",
			"require": "./dist/web-components/allumette-web.umd.js"
		}
	},
	"peerDependencies": {
		"argon2-browser": "^1.18.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton-svelte": "^1.2.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.18",
		"argon2-browser": "^1.18.0",
		"autoprefixer": "^10.4.23",
		"postcss": "^8.5.6",
		"publint": "^0.3.13",
		"svelte": "^5.39.5",
		"tailwindcss": "^4.1.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-wasm": "^3.5.0"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@noble/ed25519": "^3.0.0",
		"@noble/hashes": "^2.0.1",
		"@zerodevx/svelte-toast": "^0.9.6",
		"bip39": "^3.1.0",
		"ethers": "^6.15.0",
		"jdenticon": "^3.3.0"
	}
}
